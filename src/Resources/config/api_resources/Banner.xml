<?xml version="1.0" ?>

<resources xmlns="https://api-platform.com/schema/metadata"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://api-platform.com/schema/metadata
           https://api-platform.com/schema/metadata/metadata-2.0.xsd"
>
    <resource class="%bitbag_sylius_banner_plugin.model.banner.class%" shortName="Banner">
        <attribute name="validation_groups">sylius</attribute>

        <collectionOperations>
            <collectionOperation name="get_ads_banners">
                <attribute name="method">GET</attribute>
                <attribute name="path">/shop/ads/banners</attribute>
            </collectionOperation>
            <collectionOperation name="get_ad_banners">
                <attribute name="method">GET</attribute>
                <attribute name="path">/shop/ad/banners</attribute>
            </collectionOperation>
        </collectionOperations>

        <property name="path"  writable="false" />
        <property name="alt"  writable="false" />
        <property name="fileName"  writable="false" />
        <property name="link"  writable="false" />
        <property name="priority"  writable="false" />
        <property name="locale"  writable="false" />
        <property name="section"  writable="false" />
        <property name="ads"  writable="false" />
        <property name="id" identifier="true" writable="false" />
    </resource>
</resources>
