<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
           http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="bit_bag.sylius_banner_plugin.event_listener.banner_listener"
                 class="BitBag\SyliusBannerPlugin\EventListener\BannerListener"
        >
            <argument id="bit_bag.sylius_banner_plugin.uploader.banner_uploader" type="service"/>
            <tag name="kernel.event_listener"
                 event="bitbag_sylius_banner_plugin.banner.pre_create"
                 method="uploadBanner"
            />
            <tag name="kernel.event_listener"
                 event="bitbag_sylius_banner_plugin.banner.pre_update"
                 method="uploadBanner"
            />
            <tag name="kernel.event_listener"
                 event="bitbag_sylius_banner_plugin.banner.pre_delete"
                 method="removeBanner"
            />
        </service>
    </services>
</container>
