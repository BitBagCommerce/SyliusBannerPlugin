<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
           http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true"/>

        <service class="BitBag\SyliusBannerPlugin\Controller\GetAdsBanners"
                 id="bitbag.sylius_banner_plugin.controller.get_ads_banners"
                 public="true"
        >
            <argument id="bitbag_sylius_banner_plugin.repository.ad"
                      type="service"
            />
            <argument id="bitbag.sylius_banner_plugin.operator.banners_operator"
                      type="service"
            />
        </service>

        <service id="bitbag.sylius_banner_plugin.controller.get_ad_banners"
                 class="BitBag\SyliusBannerPlugin\Controller\GetAdBanners" >
            <argument id="bitbag_sylius_banner_plugin.repository.ad"
                      type="service"
            />
            <argument id="bitbag.sylius_banner_plugin.operator.banners_operator"
                      type="service"
            />
        </service>

    </services>
</container>
