<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
           http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="bit_bag.sylius_banner_plugin.twig.extension.ad_twig_extension"
                 class="BitBag\SyliusBannerPlugin\Twig\Extension\BannerExtension"
        >
            <argument id="bitbag_sylius_banner_plugin.repository.ad"
                      type="service"
            />
            <argument id="bitbag.sylius_banner_plugin.operator.banners_operator"
                      type="service"
            />

            <tag name="twig.extension"/>
        </service>
    </services>
</container>
